<h2><%= @game.title %></h2>
<h4>Developer: <%= @game.developer %></h4>
<h4> Platform: <%= @game.platform.name %></h4>
<p><%= @game.description %></p>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>
  <% if @game.user_id == current_user.id %>
    <%= link_to "Edit", edit_game_path(@game) %>
    <%= link_to "Delete", game_path(@game), method: :delete, data: { confirm: "Are you sure you want to delete #{@game.title}?" } %>
  <% end %>
<% end %>
