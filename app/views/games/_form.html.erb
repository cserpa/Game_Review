<%= simple_form_for @game, html: { multipart: true } do |f| %>
  <%= select_tag(:platform_id, options_for_select(@platforms), prompt: "Select a Platform") %>
  <%= f.file_field :game_img %>
  <%= f.input :title, label: "Game Title" %>
  <%= f.input :developer %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn-custom2" %>
<% end %>
